	for i in range(0,5):			
		plotSpeedup(speedUp[i,:], xRows, i,0, lbl)
		plotSpeedup(speedUp[:,i], xCols, i,0, lbl)





				
plotId=0
figId=0
	
def plotCompTimeGraph(y1, y2, x1, lblMeasures):

